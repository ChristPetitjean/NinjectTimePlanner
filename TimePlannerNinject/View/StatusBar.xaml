<UserControl x:Class="TimePlannerNinject.View.StatusBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        mc:Ignorable="d ignore"
        DataContext="{Binding StatusBar, Source={StaticResource Locator}}">

    <Border BorderThickness="1" BorderBrush="LightGray" Height="20px" Background="AliceBlue">
        <TextBlock Text="{Binding MessageToDisplay, Mode=TwoWay}" HorizontalAlignment="Right" Margin="5,0,5,0" />
   </Border>
</UserControl>
